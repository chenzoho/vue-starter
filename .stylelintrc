{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "stylelint-config-recess-order", "stylelint-config-standard-scss", "stylelint-config-prettier-scss", "stylelint-config-html", "stylelint-config-recommended-vue"],
  "plugins": ["stylelint-order"],
  "rules": {
    "max-line-length": 240,
    "rule-empty-line-before": null,
    "selector-class-pattern": [
      "^[a-z][a-z0-9\\-_]*[a-z0-9]$",
      {
        "message": "Class names should match the SUIT CSS naming convention"
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "include", "mixin", "each", "at-root", "if", "else", "for", "return", "extend", "function"]
      }
    ],
    "function-no-unknown": null,
    "scss/at-function-pattern": null,
    "scss/no-global-function-names": null,
    "scss/dollar-variable-pattern": null,
    "function-name-case": null,
    "custom-property-pattern": "^[a-z-][a-z0-9\\-_#${}]*[a-z0-9\\-_#${}]$"
  }
}
